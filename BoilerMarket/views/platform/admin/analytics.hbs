{{> adminHeader}}
<div class="m-grid__item m-grid__item--fluid m-wrapper">

	<div class="m-content">
		{{#if error}}
		<div class="alert alert-danger alert-dismissible fade show" role="alert">
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			</button>
			<strong>Oh snap!</strong> {{error}}
		</div>
		{{/if}}
		{{#if success}}
		<div class="alert alert-success alert-dismissible fade show" role="alert">
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			</button>
			<strong>Success!</strong> {{success}}
		</div>
		{{/if}}

		<div class="row">
      Average Price: ${{averagePrice}}<br>
      Items Listed: {{listedItemsCount}}<br>
      Items Sold: {{itemsSold}}<br>
      Transactions Currently Pending: {{pendingTransactions}}<br>
      Cancellations per 10 Transactions: {{cancelledTransactions}}<br>
      Disputes per 10 Transactions: {{disputeRatio}}<br>
		</div>

		<!--End::Main  Portlet-->
	</div>
</div>

{{> adminFooter}}