{{> header}}
<div class="m-grid__item m-grid__item--fluid m-wrapper">

	<div class="m-content">
		{{#if error}}
		<div class="alert alert-danger alert-dismissible fade show" role="alert">
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			</button>
			<strong>Oh snap!</strong> {{error}}
		</div>
		{{/if}}
		{{#if success}}
		<div class="alert alert-success alert-dismissible fade show" role="alert">
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			</button>
			<strong>Success!</strong> {{success}}
		</div>
		{{/if}}

		<div class="row">
            <div class="col-lg-6">

                <!--begin::Portlet-->
                <div class="m-portlet">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <span class="m-portlet__head-icon m--hide">
                                    <i class="la la-gear"></i>
                                </span>
                                <h3 class="m-portlet__head-text">
                                    Create a Listing
                                </h3>
                            </div>
                        </div>
                    </div>

                    <!--begin::Form-->

                    <form class="m-form" action="/listings/create-listing" method="post">
                        <div class="m-portlet__body">
                            <div class="m-form__section m-form__section--first">
                                <div class="form-group m-form__group">
                                    <label>Title</label>
                                    <input type="text" name="listing_title" class="form-control m-input" required="" placeholder="Listing Title">
                                </div>
                                <div class="form-group m-form__group">
                                    <label for="exampleTextarea">Description</label>
                                    <textarea class="form-control m-input" id="exampleTextarea" name="listing_description" required="" rows="3" placeholder="Listing Description"></textarea>
                                </div>
                                <div class="form-group m-form__group">
                                    <label>Price</label>
                                    <input type="number" value="0.00" placeholder="0.00" step="0.01" name="listing_price" class="form-control m-input listingPriceField" required="">
                                </div>
                                <script type="text/javascript">
                                    $(document).ready(function () {
                                        $(".listingPriceField").change(function() {
                                            $(this).val(parseFloat($(this).val()).toFixed(2));
                                        });
                                    });
                                </script>
                                <div class="form-group m-form__group">
                                    <label for="exampleSelect1">Listing Type</label>
                                    <select class="form-control m-input" required="" name="listing_type" id="exampleSelect1">
                                        <option value="1">Sale</option>
                                        <option value="2">Rent</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="m-portlet__foot m-portlet__foot--fit">
                            <div class="m-form__actions m-form__actions">
                                <button type="submit" class="btn btn-primary">Create Listing</button>
                                <button type="reset" class="btn btn-secondary">Reset</button>
                            </div>
                        </div>
                    </form>

                    <!--end::Form-->
                </div>

                <!--end::Portlet-->
            </div>
        </div>

		<!--End::Main Portlet-->
	</div>
</div>

{{> footer}}